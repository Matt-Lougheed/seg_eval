<h1>Create a new dataset</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@dataset) do |f| %>
            <div class="form-group">
                <%= f.label :name, class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                    <%= f.text_field :name %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :description, class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                    <%= f.text_field :description %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :height, class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                    <%= f.number_field(:height) %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :width, class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                    <%= f.number_field(:width) %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :frames, class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                    <%= f.number_field(:frames) %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :file, class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                    <%= f.file_field :file %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :ground_truth, class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                    <%= f.file_field :ground_truth %>
                </div>
            </div>
            <%= f.submit "Create new dataset", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
