<h1>Create a new algorithm</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @algorithm, :multipart => true do |f| %>
            <%= render 'shared/error_messages', object: @algorithm %>
            <div class="form-group">
                <%= f.label :name, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :description, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.text_area :description, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :source_code_url, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.text_field :source_code_url, class: 'form-control' %>
                </div>
            </div>
            <!-- 
            <div class="form-group">
                <%= f.label :filename, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.file_field :filename, class: 'form-control' %>
                    <p class="help-block">Upload the file with a proper extension type</p>
                </div>
            </div>
             -->
            <%= f.submit "Create", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
