<div class="row">
    <div class="col-md-8">
        <% if @algorithms.any? %>
            <h3>Algorithms (<%= @algorithms.count %>)</h3>
            <ol class="algorithms">
                <%= render @algorithms %>
            </ol>
        <% else %>
            <h3> No Algorithms Available </h3>
        <% end %>
        <div class="col-md-3 col-md-offset-3" style="margin-top: 25px">
            <%= button_to "Add new algorithm", "/algorithms/new", :class => "btn btn-primary", :method => :get %>
        </div>        
    </div>
</div>
